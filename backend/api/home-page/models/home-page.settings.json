{
  "kind": "singleType",
  "collectionName": "home_pages",
  "info": {
    "name": "Home Page"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "header": {
      "type": "string",
      "required": true
    },
    "sub_header": {
      "type": "string"
    },
    "header_image": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": true
    },
    "about": {
      "type": "richtext",
      "required": true
    },
    "about_header": {
      "type": "string",
      "default": "About Me",
      "required": true
    }
  }
}
